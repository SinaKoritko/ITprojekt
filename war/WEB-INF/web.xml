<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greet</servlet-name>
    <servlet-class>com.hdm.itprojekt.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greet</servlet-name>
    <url-pattern>/itprojekt/greet</url-pattern>
  </servlet-mapping>
 
  
  <servlet>
    <servlet-name>noteadministration</servlet-name>
    <servlet-class>com.hdm.itprojekt.server.NoteAdministrationImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>noteadministration</servlet-name>
    <url-pattern>/itprojekt/noteadministration</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.hdm.itprojekt.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/itprojekt/login</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>ITProjekt.html</welcome-file>
  </welcome-file-list>

</web-app>
